<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Delivery Hub | Admin Payments</title>
  <link rel="stylesheet" href="/css/ape.css">
  <style>

  </style>
</head>
<body>

<header>
  <h1>ðŸ’° Admin Payments Dashboard</h1>
  <form action="/admin/logout" method="GET">
    <button type="submit" class="logout-btn">Logout</button>
  </form>
</header>

<%
  const buyers = [];
  payments.forEach(p => {
    if (!buyers.some(b => b.name === p.buyer_name)) {
      buyers.push({ 
        name: p.buyer_name, 
        image: p.buyer_image,
        account_name: p.buyer_account_name,
        account_number: p.buyer_account_number
      });
    }
  });
%>

<% if (buyers.length === 0) { %>
  <p style="margin-top:20px;">No payments found yet.</p>
<% } else { %>
  <table>
    <thead>
      <tr>
        <th>Buyer</th>
        <th>Account Name</th>
        <th>Account Number</th>
        <th>Paid Orders</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% buyers.forEach((buyer, index) => { %>
        <tr>
          <td>
            <div class="user-info">
              <% if (buyer.image) { %>
                <img src="/images/<%= buyer.image %>" alt="<%= buyer.name %>">
              <% } %>
              <strong class="clickable" onclick="togglePaidOrders('<%= index %>')"><%= buyer.name %></strong>
            </div>
          </td>
          <td><%= buyer.account_name || '-' %></td>
          <td><%= buyer.account_number || '-' %></td>
          <td><%= payments.filter(p => p.buyer_name === buyer.name && (p.payment_status || '').toLowerCase() === 'paid').length %></td>
          <td>
            <% payments.filter(p => p.buyer_name === buyer.name && (p.payment_status || '').toLowerCase() === 'paid').forEach(payment => { %>
              <form action="/admin/payments/update/<%= payment.payment_id %>" method="POST" style="display:inline;">
                <input type="hidden" name="status" value="paid">
                <button class="action-btn check-btn" type="submit">âœ” Check</button>
              </form>
              <form action="/admin/payments/delete/<%= payment.payment_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this payment?');">
                <button class="action-btn delete-btn" type="submit">ðŸ—‘ Delete</button>
              </form>
            <% }) %>
          </td>
        </tr>

        <tr id="paid-orders-<%= index %>" class="buyer-orders-row">
          <td colspan="5">
            <div class="buyer-orders" id="paid-orders-<%= index %>-content">
              <table>
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>Seller</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Amount</th>
                    <th>Method</th>
                    <th>Status</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% payments.filter(p2 => p2.buyer_name === buyer.name && (p2.payment_status || '').toLowerCase() === 'paid').forEach(p2 => { %>
                    <tr>
                      <td><%= p2.post_title %></td>
                      <td>
                        <div class="seller-info">
                          <% if (p2.seller_image) { %>
                            <img src="/images/<%= p2.seller_image %>" alt="<%= p2.seller_name %>">
                          <% } %>
                          <div>
                            <strong><%= p2.seller_name %></strong><br>ðŸ“ž <%= p2.seller_phone %>
                          </div>
                        </div>
                      </td>
                      <td>
                        <% if (p2.seller_category) { %>
                          <span class="seller-category"><%= p2.seller_category %></span>
                        <% } else { %>
                          <span class="seller-category" style="background:#7f8c8d;">N/A</span>
                        <% } %>
                      </td>
                      <td><%= p2.quantity %></td>
                      <td><%= Number(p2.amount).toFixed(2) %> ETB</td>
                      <td><%= p2.payment_method || '-' %></td>
                      <td><span class="payment-status paid">Paid</span></td>
                      <td><%= new Date(p2.created_at).toLocaleString() %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="total-summary">
    Total Paid: <%= totals.totalPaid.toFixed(2) %> ETB | Total Unpaid: <%= totals.totalUnpaid.toFixed(2) %> ETB
  </div>

  <form action="/admin/export-payments" method="GET">
    <button type="submit" class="export-btn">Export to Excel</button>
  </form>
<% } %>

<script>
  function togglePaidOrders(index) {
    document.querySelectorAll('.buyer-orders').forEach((el, i) => { if (i !== parseInt(index)) el.style.display = 'none'; });
    const el = document.getElementById('paid-orders-' + index + '-content');
    if (el.style.display === 'block') el.style.display = 'none';
    else el.style.display = 'block';
  }
</script>

</body>
</html>
